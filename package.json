{
  "name": "usemcps",
  "version": "0.2.9",
  "description": "MCP server installer CLI",
  "type": "module",
  "bin": {
    "usemcps": "./bin/cli.mjs",
    "mcp": "./bin/cli.mjs",
    "add-mcp": "./bin/cli.mjs"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "build": "obuild",
    "dev": "node src/cli.ts",
    "prepublishOnly": "npm run build",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "test": "vitest run tests/*.test.ts",
    "test:watch": "vitest tests/*.test.ts",
    "test:integration": "vitest run tests/integration/integration.test.ts",
    "test:all": "vitest run",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "mcp",
    "model-context-protocol",
    "claude-code",
    "claude-desktop",
    "codex",
    "opencode"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minhluuquang/usemcp.git"
  },
  "homepage": "https://github.com/minhluuquang/usemcp#readme",
  "bugs": {
    "url": "https://github.com/minhluuquang/usemcp/issues"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "comment-json": "^4.2.5",
    "xdg-basedir": "^5.1.0"
  },
  "devDependencies": {
    "@clack/prompts": "^1.0.0",
    "@eslint/js": "^9.18.0",
    "@types/bun": "latest",
    "@types/iarna__toml": "^2.0.5",
    "@types/node": "^25.1.0",
    "eslint": "^9.18.0",
    "globals": "^17.2.0",
    "obuild": "^0.4.22",
    "picocolors": "^1.1.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.21.0",
    "vitest": "^4.0.17",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.17.1",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
